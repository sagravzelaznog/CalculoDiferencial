# Configuración de Entorno - Curso de Cálculo Diferencial

# Configuración del Servidor de Desarrollo
DEV_SERVER_PORT=8000
DEV_SERVER_HOST=localhost

# Configuración de Firebase
FIREBASE_PROJECT_ID=cursocalculodiferencial-49648
FIREBASE_AUTH_DOMAIN=cursocalculodiferencial-49648.firebaseapp.com

# Configuración de la Aplicación
APP_NAME="Curso de Cálculo Diferencial"
APP_VERSION="1.0.0"
APP_DESCRIPTION="Sistema interactivo de aprendizaje de cálculo diferencial"

# Configuración de Módulos
MODULES_COUNT=5
MODULE_1_NAME="Relaciones y Funciones"
MODULE_2_NAME="Límites"
MODULE_3_NAME="Continuidad"
MODULE_4_NAME="La Derivada"
MODULE_5_NAME="Aplicaciones de la Derivada"

# Configuración de Evaluación
PASSING_SCORE=70
MAX_ATTEMPTS=3
